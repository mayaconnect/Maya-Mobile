default_platform(:android)

platform :android do

  desc "Build APK for testing"
  lane :build_apk do
    gradle(
      task: "assembleRelease",
      project_dir: "./"
    )
  end

  desc "Build AAB for Google Play"
  lane :build_aab do
    gradle(
      task: "bundleRelease",
      project_dir: "./",
      flags: "--stacktrace --info --no-daemon"
    )
  end

  desc "Upload AAB to Google Play Internal Testing (AAB must be already built and signed)"
  lane :upload_internal do
    # Upload to Google Play (AAB should be already built and signed externally)
    upload_to_play_store(
      track: 'internal',
      aab: 'app/build/outputs/bundle/release/app-release.aab',
      skip_upload_screenshots: true,
      skip_upload_images: true,
      skip_upload_metadata: true
    )
  end

  desc "Deploy to Google Play Internal Testing"
  lane :internal do
    # Build (without clean to preserve codegen artifacts)
    gradle(
      task: "bundleRelease",
      project_dir: "./",
      flags: "--stacktrace --info --no-daemon"
    )

    # Upload to Google Play
    upload_to_play_store(
      track: 'internal',
      aab: 'app/build/outputs/bundle/release/app-release.aab',
      skip_upload_screenshots: true,
      skip_upload_images: true,
      skip_upload_metadata: true
    )
  end

  desc "Deploy to Google Play Beta Testing"
  lane :beta do
    gradle(
      task: "bundleRelease",
      project_dir: "./",
      flags: "--stacktrace --info --no-daemon"
    )

    upload_to_play_store(
      track: 'beta',
      aab: 'app/build/outputs/bundle/release/app-release.aab',
      skip_upload_screenshots: true,
      skip_upload_images: true,
      skip_upload_metadata: true
    )
  end

  desc "Deploy to Google Play Production"
  lane :production do
    gradle(
      task: "bundleRelease",
      project_dir: "./",
      flags: "--stacktrace --info --no-daemon"
    )

    upload_to_play_store(
      track: 'production',
      aab: 'app/build/outputs/bundle/release/app-release.aab'
    )
  end

end

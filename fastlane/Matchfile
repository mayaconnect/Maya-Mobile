# Matchfile for fastlane match
# This file is used by fastlane match to configure certificate and provisioning profile management
# The git_url will be overridden by the workflow or environment variable MATCH_GIT_URL

git_url(ENV["MATCH_GIT_URL"] || "https://github.com/mayaconnect/maya-ios-certificates.git")

storage_mode("git")

type("appstore") # Can be appstore, adhoc, development, enterprise

app_identifier(["com.mayaconnect.app"])

# API Key authentication (preferred over username/password)
# The api_key_path will be set by the workflow or can be set via ENV
api_key_path(ENV["MATCH_API_KEY_PATH"] || "fastlane/keys/api_key.json")

# Username is optional when using API Key, but can be set for fallback
# username(ENV["FASTLANE_APPLE_ID"] || "votre-email@apple.com")

# For all available options run `fastlane match --help`
# The docs are available on https://docs.fastlane.tools/actions/match
